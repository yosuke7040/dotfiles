  "editor.accessibilitySupport": "off",
  "git.openRepositoryInParentFolders": "never",
  "helm-ls.path": "/opt/homebrew/Cellar/helm-ls/0.2.0/bin",
  "projectManager.git.baseFolders": ["/Users/abe/src"],
  "helm-intellisense.customValueFileNames": ["/Users/abe/src/k8s-manifests"],
  "animations.Enabled": false,
