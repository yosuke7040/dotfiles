  "animations.Scrolling": "Fade",
  "apc.imports": [
    "file://${userHome}/.cursor/extensions/brandonkirbyson.vscode-animations-2.0.4/dist/updateHandler.js"
  ],
  // ====================================
  // find it faster
  // ====================================
  "find-it-faster.general.showMaximizedTerminal": false,
  "find-it-faster.findWithinFiles.fuzzRipgrepQuery": true,
  "find-it-faster.general.killTerminalAfterUse": true,
  "multiCommand.commands": [
    {
      "command": "multiCommand.findFiles",
      "interval": 220,
      "sequence": [
        "workbench.action.toggleMaximizedPanel",
        "find-it-faster.findFiles"
      ]
    },
    {
      "command": "multiCommand.findWithinFiles",
      "interval": 220,
      "sequence": [
        "workbench.action.toggleMaximizedPanel",
        "find-it-faster.findWithinFiles"
      ]
    }
  ],
  // ====================================
  // vim
  // ====================================
  "vim.scrolloff": 5,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.easymotion": true,
  "vim.leader": "<space>",
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["Q"],
      "after": ["g", "q"]
    },
    {
      "before": ["<C-c>"],
      "after": ["<Esc>"]
    },
    {
      "before": ["U"],
      "after": ["<C-r>"]
    },
    {
      "before": ["J"],
      "after": ["}"]
    },
    {
      "before": ["K"],
      "after": ["{"]
    },
    {
      "before": ["Y"],
      "after": ["y", "$"]
    },
    {
      "before": ["M"],
      "after": ["%"]
    },
    {
      "before": ["x"],
      "after": ["\"", "_", "x"]
    },
    {
      "before": ["d", "d"],
      "after": ["\"", "_", "d", "d"]
    },
    {
      "before": ["D"],
      "after": ["\"", "_", "D"]
    },
    {
      "before": ["s", "v"],
      "commands": ["workbench.action.splitEditorRight"]
    },
    {
      "before": ["s", "s"],
      "commands": ["workbench.action.splitEditorDown"]
    },
    {
      "before": ["s", "m"],
      "commands": ["workbench.action.moveEditorToNextGroup"]
    },
    {
      "before": ["s", "o"],
      "commands": ["workbench.action.focusNextGroup"]
    },
    {
      "before": ["<leader>", "r"],
      "commands": ["editor.action.rename"]
    },
    {
      "before": ["<leader>", "f"],
      "commands": ["editor.action.formatDocument"]
    },
    // タブ間での移動
    {
      "before": ["s", "h"],
      "commands": ["workbench.action.focusPreviousGroup"]
    },
    {
      "before": ["s", "l"],
      "commands": ["workbench.action.focusNextGroup"]
    },
    // ファイル検索
    {
      "before": ["<Leader>", "f", "f"],
      "commands": ["multiCommand.findFiles"],
      "when": ["editorFocus && vim.mode == 'Normal'"]
    },
    // 全体検索
    {
      "before": ["<Leader>", "f", "w"],
      "commands": ["multiCommand.findWithinFiles"],
      "when": ["editorFocus && vim.mode == 'Normal'"]
    },
    // ファイル内検索
    {
      "before": ["<Leader>", "f", "/"],
      "commands": ["multiCommand.findCurrentFile"],
      "when": ["editorFocus && vim.mode == 'Normal'"]
    },
    // 定義へ移動
    {
      "before": ["g", "d"],
      "commands": ["editor.action.goToDeclaration"],
      "when": ["editorFocus && vim.mode == 'Normal'"]
    },
    // 実装へ移動
    {
      "before": ["g", "i"],
      "commands": ["editor.action.goToImplementation"],
      "when": ["editorFocus && vim.mode == 'Normal'"]
    },
    // ホバー表示
    {
      "before": ["g", "h"],
      "commands": ["editor.action.showHover"],
      "when": ["editorFocus && vim.mode == 'Normal'"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["<Tab>"],
      "after": [">"]
    },
    {
      "before": ["<S-Tab>"],
      "after": ["<"]
    },
    {
      "before": ["p"],
      "after": ["P"]
    },
    {
      "before": ["<"],
      "after": ["<", "g", "v"]
    },
    {
      "before": [">"],
      "after": [">", "g", "v"]
    },
    {
      "before": ["i", " "],
      "after": ["i", "W"]
    }
  ],
  "vim.operatorPendingModeKeyBindings": [
    {
      "before": ["i", " "],
      "after": ["i", "W"]
    }
  ],
  "editor.cursorSurroundingLines": 5,
  "animations.CursorAnimation": true,
  "animations.Custom-CSS": false,
  "custom-ui-style.external.imports": [],
  "vscode_custom_css.imports": [
