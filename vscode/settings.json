{
  "recommendations": [
    "vscode-icons-team.vscode-icons",
    "vscode-neovim.neovim",
    "skattyadz.vscode-quick-scope",
    "dprint.dprint"
  ],
  // "vim.vimrc.enable": true,
  // "vim.vimrc.path": "$HOME/.vimrc",
  // "vscode-neovim.neovimExecutablePaths.linux": "$HOME/.vimrc",
  // "vscode-neovim.neovimInitVimPaths.linux": "$HOME/.vimrc",
  "vscode-neovim.neovimExecutablePaths.linux": "$HOME/.config/nvim/init.lua",
  "vscode-neovim.neovimInitVimPaths.linux": "~/.config/nvim/init.lua",
  // "workbench.list.automaticKeyboardNavigation": false,
  "vscode-neovim.highlightGroups.highlights": "QuickScopePrimary",
  // "vscode-neovim.highlightGroups.highlights": "Visual",
  "terminal.integrated.scrollback": 30000,
  "debug.allowBreakpointsEverywhere": true,
  "security.workspace.trust.untrustedFiles": "open",
  "editor.wordWrap": "on",
  "hadolint.hadolintPath": "/opt/homebrew/bin/hadolint",
  // ====================================
  // ファイル保存時に行われるアクション
  // ====================================
  // ファイル保存時、コードを整形する
  "editor.formatOnSave": true,
  // // ファイル保存時、同時に行われるアクション
  // "editor.codeActionsOnSave": {
  //   // 拡張機能Prettierのチェックを走らせる
  //   "source.fixAll.prettier": true
  // },
  // ファイル保存時、最終行に改行を挿入する
  "files.insertFinalNewline": true,
  // ファイル保存時、最終行以降の空行を削除する
  "files.trimFinalNewlines": true,
  // ファイル保存時、末尾の空白をトリミングする
  "files.trimTrailingWhitespace": true,
  // ====================================
  // エディタ全体のUIに関する設定
  // ====================================
  // テーマカラー
  "workbench.colorTheme": "GitHub Dark Default",
  // ミニマップを表示する
  "editor.minimap.enabled": false,
  // ファイルのパンくずリストを表示する
  "breadcrumbs.enabled": false,
  // メニューバーを表示する (toggle: Altキーで上部に表示する)
  "window.menuBarVisibility": "toggle",
  // ====================================
  // エディタのUIに関する詳細設定
  // ====================================
  // タブサイズ
  "editor.tabSize": 2,
  // インデントガイドを表示する
  "editor.guides.indentation": false,
  // 括弧（ブラケット）のペアガイドを表示する
  "editor.guides.bracketPairs": true,
  // 括弧（ブラケット）の水平方向のペアガイドを表示する
  "editor.guides.bracketPairsHorizontal": true,
  // 括弧（ブラケット）のペアごとに色を分ける
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  // 選択範囲のハイライトに角丸を適用する
  "editor.roundedSelection": false,
  // 左端の行番号にカーソル位置からの距離を表示
  "editor.lineNumbers": "relative",
  // ====================================
  // ワークベンチの設定
  // ====================================
  // アイコンテーマ
  // "workbench.iconTheme": "material-icon-theme",
  "workbench.iconTheme": "vscode-icons",
  // ツリーのインデント
  "workbench.tree.indent": 12,
  // ツリーのインデントガイドを表示する
  "workbench.tree.renderIndentGuides": "always",
  // アニメーションを減らす
  "workbench.reduceMotion": "on",
  // ====================================
  // エディタのタイポグラフィーに関する設定
  // ====================================
  // // フォント
  // "editor.fontFamily": "\"Source Han Code JP\", monospace",
  // 文字サイズ
  "editor.fontSize": 12,
  // 文字間隔
  "editor.letterSpacing": -0.1,
  // 行間
  "editor.lineHeight": 1.35,
  // ====================================
  // キャレットの設定
  // ====================================
  // エディタのキャレットの幅
  "editor.cursorWidth": 3,
  // エディタのキャレットアニメーション
  "editor.cursorBlinking": "phase",
  // ターミナルのキャレットのスタイル
  "terminal.integrated.cursorStyle": "block",
  //ターミナルのフォント
  // "terminal.integrated.fontFamily": "monospace",
  // "terminal.integrated.fontFamily": "Hack, 'Noto Sans JP', monospace",
  // ターミナルの文字サイズ
  "terminal.integrated.fontSize": 12,
  // ターミナルのキャレットアニメーション
  "terminal.integrated.cursorBlinking": true,
  // テーマカラーの配色を上書きする
  "workbench.colorCustomizations": {
    // エディタのキャレットカラー
    "editorCursor.foreground": "#f00058",
    // ターミナルのキャレットカラー
    "terminalCursor.foreground": "#efff0b"
  },
  // ====================================
  // 拡張機能の個別設定
  // ====================================
  // ------------------------------------
  // indent-rainbow
  // ------------------------------------
  // インデントカラー
  "indentRainbow.colors": [
    "rgba(153, 40, 57, 0.24)",
    "rgba(111, 115, 30, 0.24)",
    "rgba(30, 115, 102, 0.24)",
    "rgba(85, 30, 115, 0.24)"
  ],
  // ------------------------------------
  // CodeSnap
  // ------------------------------------
  // 背景色
  "codesnap.backgroundColor": "#70cdc9",
  // エディタの影
  "codesnap.boxShadow": "rgba(0, 0, 0, 0.2) 0px 20px 100px",
  // エディタの行番号表示
  "codesnap.showLineNumbers": false,
  // https://help.gitkraken.com/gitlens/gitlens-settings/
  "gitlens.codeLens.codeLens.enabled": false,
  "gitlens.codeLens.currentLine.enabled": false,
  "gitlens.codeLens.hovers.enabled": false,
  "gitlens.codeLens.recentChange.enabled": false,
  "gitlens.codeLens.authors.enabled": false,
  "gitlens.currentLine.enabled": false,
  "gitlens.toggleLineBlame.enabled": false,
  "better-comments.tags": [
    {
      "tag": "!",
      "color": "#FF2D00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "?",
      "color": "#C77EB5",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "//",
      "color": "#474747",
      "strikethrough": true,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "todo",
      "color": "#FF8C00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "note",
      "color": "#98C379",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "*",
      "color": "#98C379",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    }
  ],
  "prettier.printWidth": 80,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // "editor.defaultFormatter": "dprint.dprint",
  "[javascript]": {
    // "editor.defaultFormatter": "dprint.dprint",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.formatOnType": true,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": "explicit"
    }
  },
  "[json]": {
    // "editor.defaultFormatter": "dprint.dprint",
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.formatOnType": true
  },
  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true,
    "editor.formatOnType": true,
    "yaml.format.printWidth": 120
  },
  "[terraform]": {
    "editor.defaultFormatter": "hashicorp.terraform",
    "editor.tabSize": 2,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.codeActionsOnSave": {
      "source.formatAll.terraform": true
    }
  },
  "[terraform-vars]": {
    "editor.defaultFormatter": "hashicorp.terraform",
    "editor.tabSize": 2,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.codeActionsOnSave": {
      "source.formatAll.terraform": true
    }
  },
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": "explicit",
      "source.organizeImports": "explicit"
    }
  },
  "gitlens.hovers.currentLine.over": "line",
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "[go]": {
    "editor.defaultFormatter": "golang.go",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 2
  },
  "vs-kubernetes": {
    "vs-kubernetes.minikube-show-information-expiration": "2024-07-10T11:05:38.328Z"
  },
  "files.associations": {
    ".skhdrc": "plaintext"
  },
  "[terraform][terraform-vars]": {
    "editor.codeActionsOnSave": {
      "source.formatAll.terraform": "explicit"
    }
  }
}
